<%= form_for @petition, :html => { :multipart => true } do |f| %>
    <%= f.label :exception %><br />
    <%= f.select :exception, ['Waiver','Substitution'] %>
  </p>
  <p>
    <%= f.label :reason %><br />
    <%= f.text_area :reason %>
  </p>
  <p>
    <% number = 0 %>
    <%= f.fields_for :assets do |asset| %>
      <p>
        <%= asset.label :asset, "File ##{number += 1}" %>
        <%= asset.file_field :asset %>
      </p>
    <% end %>
  </p>
  <%= f.submit %>
<% end %>